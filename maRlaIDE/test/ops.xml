<?xml version="1.0" encoding="UTF-8" ?>
<operations version="1.0">
	<operation name="NOP">
		<computation>
			<loop type="parent" valueVar="col">
				<save type="double_array" rvar="col" column="" />
			</loop>
		</computation>
	</operation>
	<operation name="t-test">
		<query type="checkbox" prompt="Is your data normal?" name="normal" />
		<computation>
			<loop type="parent" valueVar="col">
				<cmd>t = t.test(col)</cmd>
				<save type="double" column="t">t$statistic</save>
				<save type="double" column="df">t$parameter</save>
				<save type="double" column="p-value">t$p.value</save>
				<save type="double" column="mean">t$estimate</save>
				<save type="double" column="CI">t$conf.int[1]</save>
				<save type="double" column="CI">t$conf.int[2]</save>
				<save type="double" column="alpha">attr(t$conf.int, 'conf.level')</save>
			</loop>
		</computation>
	</operation>
	<operation name="Mean">
		<computation>
			<loop type="parent" valueVar="col">
				<save type="double" column="mean">mean(col)</save>
			</loop>
		</computation>
	</operation>
	<operation name="Standard Deviation">
		<computation>
			<loop type="parent" valueVar="col">
				<save type="double" column="sd">sd(col)</save>
			</loop>
		</computation>
	</operation>
	<operation name="Sum">
		<computation>
			<loop type="parent" valueVar="col">
				<save type="double" column="sum">sum(col)</save>
			</loop>
		</computation>
	</operation>
	<operation name="Summation">
		<computation>
			<loop type="parent" valueVar="col">
				<save type="double" column="sum">sum(col)</save>
			</loop>
		</computation>
	</operation>
	<operation name="Summary">
		<computation>
			<loop type="parent" keyVar="colName" valueVar="col">
				<cmd>s = summary(col)</cmd>
				<cmd>n = names(s)</cmd>
				<loop type="double_array" rvar="s" keyVar="i">
					<save type="double" dynamic_column="paste(colName, n[i])">s[i]</save>
				</loop>
			</loop>
		</computation>
	</operation>
	<operation name="Plot">
		<query type="column" name="x" prompt="X column" />
		<query type="column" name="y" prompt="Y column" />
		<computation>
			<set rvar="x" name="x" />
			<set rvar="y" name="y" />
			<plot>
				<cmd>plot(x,y)</cmd>
			</plot>
		</computation>
	</operation>
</operations>

