	<operation name="Divide" category="Basic Math">
		<query type="column" name="col" prompt="Column?" column_type="numeric" />
		<query type="numeric" name="val" prompt="Divide by" />

		<longname><response name="col" default="column" /> / <response name="val" default="X" /></longname>

		<computation>
			<set name="col" rvar="colName" use="name" />
			<set name="val" rvar="val" />

			<loop type="parent" value_var="currCol" key_var="currColName">
				<if expr="currColName == colName">
					<then>
						<!-- This is the column we're supposed to divide -->
						<save type="numeric" r_column="currColName">currCol / val</save>
					</then>
					<else>
						<!-- Not the column we're working with, just copy it over -->
						<copy r_column="currColName" />
					</else>
				</if>
			</loop>
		</computation>
	</operation>

